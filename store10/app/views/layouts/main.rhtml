<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" id="html">
<head>
	<title>RED / <%=
	if @title then
		h @title
	else
		h controller.controller_name
	end
	-%></title>
	<%= javascript_include_tag "prototype","calendar","effects", "dragdrop", "controls","lightbox","AC_RunActiveContent","scriptaculous1","common" %>
	<%= engine_javascript "substruct" %>
	<%= stylesheet_link_tag 'calendar' %>  
	<script>
	function moveToPrevious()
	{
		new Effect.Move('imageBoxInside', { x: 180, y: 0, transition: Effect.Transitions.sinoidal });
	}

	function moveToNext()
	{
		new Effect.Move('imageBoxInside', { x: -180, y: 0, transition: Effect.Transitions.sinoidal });
	}
	</script>
	<link rel="stylesheet" href="/skin/css/red.css" type="text/css" />  
	<!--[if lt IE 7]>
		<%= javascript_include_tag "pngfix" %>
		<script type="text/javascript">

			onload = function() { wrapper.focus() }
		</script>
		<link rel="stylesheet" href="/skin/css/ie_fix.css" type="text/css" media="screen" title="no title" charset="utf-8" />
		<![endif]-->
		<link rel="alternate" type="application/rss+xml" href="/rss/recon" title="recon" />
	</head>
	<body id="store" onload="" class="<%= @li  -%>">
		<%
		# TODO - Clean up this messy navigation generation stuff...
		#
		@cname = controller.controller_name
		@aname = controller.action_name
		# Special handling for the home page...
		if (@cname == 'content_nodes' && @aname == 'show_by_name' && params[:name] == 'home') then
			@cname = 'main'
		end
		# Is this a blog post?
		@blog_post = false
		if (@cname == 'content_nodes' && @content_node) then
			if (@content_node.is_blog_post?) then
				@blog_post = true
			end
		end
		%>

		<% if flash[:notice] -%>
		<div id="flash" style="display:none;">
			<h2>Wanted to let you know...</h2>
			<p>
				<%= flash[:notice] %>
			</p>
			<p style='text-align: center;'>
				<a href="#" class="action" onmousedown="new Effect.BlindUp($('flash'))" />Close</a>
			</p>
		</div>
		<script type="text/javascript">
		new Effect.BlindDown($("flash"));
		</script>
		<% end -%>

		<% if flash[:error] -%>
		<div id="flash_error" style="display:none;">
			<h2>Error...</h2>
			<p>
				<%= flash[:error] %>
			</p>
			<p>
				<a href="#" class="action" onmousedown="new Effect.BlindUp($('flash_error'))" />Close</a>
				<script type="text/javascript">
				new Effect.BlindDown($("flash_error"));
				</script>
			</div>

			<% end -%>
			<!------------------- start wrapper1---------------------->
			<div id="wrapper1">
				<div id="wrapper">
					<div id="logo">
						<a href="http://red.com"><img src="/images/logo/logo.png" alt="red digital cinema"  disibledevent="fixpng(this)"  /></a>
					</div>
					<!-- start #header -->
					<div id="header">
						<ul>
							<li ><a href="<%= url_for homepage_url(:lang => params[:lang]) %>"><span>Home</span></a></li>
							<li><a href="/cameras"><span>Cameras</span></a></li>
							<li><a href="/lenses"><span>Lenses</span></a></li>
							<li><a href="/accessories"><span>Accessories</span></a></li>
							<li><a href="/shot_on_red"><span>Shot on RED</span></a></li>
							<li><a href="/support"><span>Support</span></a></li>
							<li><a href="/faq"><span>FAQ</span></a></li>
							<li class="no_line"><a class="current" href="/store/"><span>Store</span></a></li>
						</ul>
						<!-- end #header -->
					</div>
					
					<!-- start #content -->
					<div id="content" class="<%= @two_column_layout == true ? 'twoColumn' : '' %>">
						<%= @content_for_layout %>
						<!-- end #content -->
					</div>
					<div class="clearing"></div>
							<!-- start #footer -->
							<%= render :partial => "static_pages/global/footer" %>
							</div>
							<!-- end #wrapper -->
							</div>
							<!--  end #wrapper1 -->
						</div>
						<%= javascript_include_tag "urchin" %> 
						<script type="text/javascript">
						_uacct = "UA-666652-2";
						urchinTracker();
						</script>
					</body>
					</html>