<% content_for(:head) do %>
  <script type="text/javascript" src="/javascripts/prototype_for_homepage.js"></script>
  <script type="text/javascript" src="/javascripts/banner_slider.js"></script>
  <script type="text/javascript"src="/javascripts/scriptaculous_for_homepage.js"></script> 
  <script type ="text/javascript">
  setAuto(); 
  </script>
  <%= stylesheet_link_tag 'v2/pages/homepage' %>
<% end %>

<% content_for(:heading) do %>
  <h1><%= _('GLOBAL|WELCOME') %></h1>
<% end %>

<div id="hero">
  <div id="crossfade"> 
    <div id="feature2" class="fader"> 
      <div class="image">
        <%= link_to image_tag('http://red.cachefly.net/14/index/epic.jpg', :size => '215x536'), '/epic_scarlet' %>
        <%= link_to image_tag('http://red.cachefly.net/14/index/scarlet.jpg', :size => '215x536'), '/epic_scarlet' %>
        <%= link_to image_tag('http://red.cachefly.net/13/red_one.jpg', :size => '215x536'), :controller => 'cameras' %>
        <a href="/redray" class='no-margin'>
		<%#= link_to image_tag('http://red.cachefly.net/13/red_ray.jpg', :size => '215x536'), {:action => 'redray'}, :class => 'no-margin' %>
		<%= image_tag('http://red.cachefly.net/13/red_ray.jpg', :size => '215x536') %>
		</a>
      </div>
      <div class="text"></div>
    </div>
    
    <% if @red_china || params[:lang] == "zh_CN" # RED China Event, only for "zh_CN" %>
    <div id="feature1" class="fader">
      <div class="image">
        <%= link_to(
          image_tag("/skin/img/index/hero_china.jpg", :alt => "RED China", :size => "910x537"),
          :controller => "event", :action => "red_china", :lang => nil
        ) %>
      </div>
      <div class="text"></div>
    </div>
    <script type="text/javascript">
      new CrossFader('feature2', 'feature1');
    </script>
    <% end %>
    
  </div>
</div>

<div id="firmware" class="block-heading">
  Current RED ONE Firmware :
  <%= link_to "Release Build 17", :controller => "support", :action => "release_history", :id => 4 %>
  |
  <%= link_to "RED ALERT! Â <span>v3.6.0</span>", :controller => "support", :action => "release_history", :id => 3 %>
  |
  <%= link_to "REDCINE <span>v3.1.8</span>", :controller => "support", :action => "release_history", :id => 6 %>
  |
  <%= link_to "More...", :controller => "support" %>
</div>

<div id="news" class="transparent-25">
  <div id="recon" class="transparent-50">
    <h2>
      <a href="http://www.reduser.net/forum/forumdisplay.php?f=29" ><%= _('HOME|RECON|LINK') %></a>
    </h2>
    <span><%= _('HOME|RECON|SCRIPT|LINK') %> | <a href="/rss/recon" class="rss">RSS</a></span>
    <ul>
      <% @red_con[0..5].each do |news| %>
      <li>
        <%= link_to truncate(news.title,30), news.link,:alt => news.title %>
      </li>
      <% end %>
    </ul>
  </div>
  
  <div id="reduser-news" class="transparent-50">
